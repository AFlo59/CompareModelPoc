[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    venv,
    build,
    dist,
    migrations,
    .tox
ignore = 
    E203,
    E501,
    W503,
    F401,
    W291,
    W293
per-file-ignores =
    tests/*:F401,F811,E402,F841
    conftest.py:F401,F811,E722
    __init__.py:F401
